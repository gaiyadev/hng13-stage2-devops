# Application Images
BLUE_IMAGE=your-blue-image:latest
GREEN_IMAGE=your-green-image:latest

# Release Identifiers
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Nginx Configuration
PUBLIC_PORT=8080
ACTIVE_POOL=blue

# Failover Settings
MAX_FAILS=2
FAIL_TIMEOUT=5s



# Slack webhook for incoming messages (no secrets in repo). Put actual webhook in your private .env
SLACK_WEBHOOK_URL=

# Initial active pool
ACTIVE_POOL=blue

# Threshold percent for error-rate alert (percentage)
ERROR_RATE_THRESHOLD=2

# Rolling window size (requests) over which error-rate is measured
WINDOW_SIZE=200

# Minimum seconds between identical alerts (cooldown)
ALERT_COOLDOWN_SEC=300

# Set to "1" to temporarily suppress alerts (maintenance)
MAINTENANCE_MODE=0

# Nginx access log path (inside container)
LOG_PATH=/var/log/nginx/access.log

# App images and release ids (example placeholders; these are read by docker-compose)
BLUE_IMAGE=your-registry/your-app:blue
GREEN_IMAGE=your-registry/your-app:green
RELEASE_ID_BLUE=blue-release-1
RELEASE_ID_GREEN=green-release-1
