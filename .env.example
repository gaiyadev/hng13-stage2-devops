# Application Images
BLUE_IMAGE=your-blue-image:latest
GREEN_IMAGE=your-green-image:latest

# Release Identifiers
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Nginx Configuration
PUBLIC_PORT=8080
ACTIVE_POOL=blue

# Failover Settings
MAX_FAILS=2
FAIL_TIMEOUT=5s



# Slack webhook for incoming messages (no secrets in repo). Put actual webhook in your private .env
SLACK_WEBHOOK_URL=

# Initial active pool
ACTIVE_POOL=blue

# Threshold percent for error-rate alert (percentage)
# Observability & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ACTIVE_POOL=blue
ERROR_RATE_THRESHOLD=2
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300
MAINTENANCE_MODE=false
